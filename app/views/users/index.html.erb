<div class="row home-size bg-white justify-content-around align-items-center p-5">
  <div class="col-sm-12 col-md-12 col-lg-4 home-img">
    <%= image_tag "home-img.png", width: 700 %>
  </div>
  <div class="col-sm-12 col-md-12 col-lg-7 text-center">
    <%= form_tag root_path, method: :get do %>
      <div class="row mb-5">
        <div class="col-10">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Procure pelo nome, gênero ou email"%>
        </div>
        <div class="col-2">
          <%= submit_tag "Procurar", class: "btn-search w-100" %>
        </div>
      </div>
    <% end %>
    <div class="table-roll">
      <table class="table table-striped table-hover table-bordered table-roll">
        <thead>
          <tr>
            <th scope="col">Imagem</th>
            <th scope="col">Nome</th>
            <th scope="col">Gênero</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |user| %>
            <tr>
              <td class="align-middle">
                <%= image_tag(user.picture_url) %>
              </td>
              <td class="align-middle">
                <%= user.name %>
              </td>
              <td class="align-middle">
                <%= user.gender.capitalize() %>
              </td>
              <td class="align-middle">
                <%= user.email %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-center mt-2">
      <%== render partial: 'shared/bootstrap_nav', locals: {pagy: @pagy} %>
      <%# <%== pagy_nav(@pagy) %>
    </div>
  </div>
</div>
